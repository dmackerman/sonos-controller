@import 'vars'

*
  box-sizing:border-box

body
  margin:0
  padding:0
  background:black
  color:white
  font-family:$fonts

a
  color: white
  font-weight:bold
  text-decoration:none

.hidden
  display:none !important

.title-bar
  position:absolute
  background:linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6))
  height:20px
  left:0
  right:0
  height:36px
  z-index:10
  opacity:0
  transition:200ms opacity

body:hover
  .title-bar
    opacity:1

.song
  position:relative
  width:300px
  height:300px

  &:before
  .song-cover
    position:absolute
    width:100%
    height:100%

  &:before
    content:''
    z-index:1
    background:linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.75))

  .song-meta
    z-index:2
    text-align:center
    position:absolute
    bottom:0
    width:100%
    padding:10px

  .song-title
    font-size:18px
    font-weight:500

  .song-artist
    font-size:13px
    opacity:0.7

  .song-controls
    margin-top:10px

  .song-play
  .song-prev
  .song-next
  .song-pause
    display:inline-block
    height:48px
    width:48px
    fill:white
    cursor:pointer
    background-size:cover

  .song-prev
  .song-next
    transform:scale(0.6)

  .song-play
    background:url('data:image/svg+xml;base64,')

