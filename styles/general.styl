@import 'vars'

*
  box-sizing:border-box

body
  margin:0
  padding:0
  background:$dark
  color:$light
  font-family:$fonts

a
  color: white
  font-weight:bold
  text-decoration:none

.song
  position:relative
  width:300px
  height:300px

  &:before
  .song-cover
    position:absolute
    width:100%
    height:100%

  &:before
    content:''
    z-index:1
    background:linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.75))

  .song-meta
    z-index:2
    text-align:center
    position:absolute
    bottom:0
    width:100%
    padding:15px

  .song-title
    font-size:20px
    font-weight:bold

  .song-artist
    font-size:11px
    opacity:0.7

  .song-play
    display:inline-block
    height:40px
    width:40px
    background-size:cover
    fill:white
